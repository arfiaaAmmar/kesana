{
  "manifest_version": 3,
  "name": "Kesana",
  "version": "1.0",
  "description": "Extend Asana with useful features",
  "permissions": [
    "clipboardWrite",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://app.asana.com/api/1.0/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.asana.com/*"],
      "js": [
        "vendors/xlsx.full.min.js",
        "vendors/tailwind.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "oauth2": {
    "client_id": "1211524313577501",
    "scopes": [
      "default"
    ]
  }
}
