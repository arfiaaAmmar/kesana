{
  "manifest_version": 3,
  "name": "Kesana",
  "version": "1.0",
  "description": "Extend Asana with useful features",
  "icons": {
    "16": "imgs/icon16.png",
    "48": "imgs/icon48.png",
    "128": "imgs/icon128.png"
  },
  "permissions": [
    "clipboardWrite",
    "cookies"
  ],
  "host_permissions": [
    "https://app.asana.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.asana.com/*"],
      "js": [
        "exceljs.min.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
